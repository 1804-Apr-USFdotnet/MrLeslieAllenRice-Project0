@model IEnumerable<RestaurantReviewWeb.Models.Restaurant>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Restaurants</title>
</head>
    <body>
        <h2 align="center">All Restaurants</h2>
        <p align="center">
            @Html.ActionLink("Create New Restaurant", "Create", "Restaurants")
        </p>
        <table class="table" align="center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvgRating)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvgRating)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Restaurants", new { sRestName = item.Name, sAddress = item.Address }, null) |
                        @Html.ActionLink("Reviews", "Search", "Reviews", new { sRestName = item.Name, sAddress = item.Address}, null) |
                        @Html.ActionLink("Delete", "Delete", "Restaurants", new { sRestName = item.Name, sAddress = item.Address }, null)
                    </td>
                </tr>
            }

        </table>
    </body>

</html>
